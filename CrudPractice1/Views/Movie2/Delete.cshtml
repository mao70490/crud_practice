        </dt>
        <dd class="col-sm-10">
            @if (Model.MovieLanguages != null && Model.MovieLanguages.Any())
            {
                foreach (var lang in Model.MovieLanguages)
                {
                    <span class="badge bg-secondary me-1">@lang.Language?.Name</span>
                }
            }
            else
            {
                <span class="text-muted">無</span>
            }
        </dd>
